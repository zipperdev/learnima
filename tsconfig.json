{
    "compilerOptions": {
        "types": ["react-native", "jest", "styled-components-react-native"],
        "plugins": [
            {
                "name": "typescript-styled-plugin",
                "lint": {
                    "validProperties": [
                        "shadow-color",
                        "shadow-opacity",
                        "shadow-offset",
                        "shadow-radius",
                        "padding-horizontal",
                        "padding-vertical",
                        "margin-vertical",
                        "margin-horizontal",
                        "tint-color",
                        "aspect-ratio",
                        "elevation"
                    ]
                }
            }
        ]
    },
    "extends": "@tsconfig/react-native/tsconfig.json"
}